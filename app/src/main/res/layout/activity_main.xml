<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
<!--    dp __ density pixel-->
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:id="@+id/game_spin_1"
        android:entries="@array/game_genres"
        />

    <Button
        android:id="@+id/game_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:text="@string/find_game"

        />

    <TextView
        android:id="@+id/binding_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/find_game_text"
        android:background="@color/cardview_dark_background"
        android:textColor="@color/white"
        android:paddingHorizontal="6dp"
        android:paddingVertical="3dp"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="2dp"
        android:id="@+id/description_view"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/available_games_label"
        android:id="@+id/available_games_lable"
        android:visibility="gone"
        android:background="@color/black"
        android:padding="4dp"
        android:layout_marginVertical="4dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/gamesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:visibility="gone"
        android:layout_marginTop="4dp"

        />
</LinearLayout>